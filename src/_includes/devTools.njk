<script>
  try {
    window.disableDevtool = new DisableDevtool({
      ondevtoolopen: function (type) {
        console.log(type + ' is open');
        window.opener = null;
        window.open('', '_self');
        try {
          window.close();
        } catch (closeError) {
          console.error("Error closing window:", closeError);
        }
        window.history.back();
      },
      ondevtoolclose: function (type) {
        console.log(type + ' is closed');
      },
      oninit: function () {
        console.log('DisableDevtool initialized');
      }
    });
  } catch (error) {
    console.error("Error initializing DisableDevtool:", error);
  }
</script>
<script>
  function closeWindow() {
    window.opener = null;
    window.open('', '_self');
    window.close();
    window.history.back();
  }
  document.onkeydown = function (e) {
    if (event.keyCode == 123) {
      closeWindow()
      return false;
    }
    if (e.ctrlKey && e.shiftKey && e.keyCode == 'I'.charCodeAt(0)) {
      closeWindow()
      return false;
    }
    if (e.ctrlKey && e.shiftKey && e.keyCode == 'J'.charCodeAt(0)) {
      closeWindow()
      return false;
    }
    if (e.ctrlKey && e.shiftKey && e.keyCode == 'C'.charCodeAt(0)) {
      closeWindow()
      return false;
    }
    if (e.ctrlKey && e.keyCode == 'U'.charCodeAt(0)) {
      closeWindow()
      return false;
    }
  }
</script>
